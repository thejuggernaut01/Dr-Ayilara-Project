<%- include('../includes/head.ejs') %>

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="w-[75%] mx-auto md:w-[65%] lg-[55%] xl:w-[40%] mt-3 relative">
    <div class="flex flex-col justify-center">

      <div class="flex flex-col gap-5 mt-5 md:flex-row">
        <div class="space-y-5 md:flex-1">        
          <form action="/reset" method="POST" class="space-y-5" id="resetForm">
            <div class="flex flex-col space-y-1">
              <label for="email" class="text-sm font-semibold">Email*</label>
              <input type="email" name="email" id="email" class="border border-gray-400 h-14 rounded-lg outline-2 outline-transparent pl-4 text-lg placeholder:text-base text-gray-500 focus:outline-2 focus:outline-[#0052FF] <%= emailErrMsg ? 'border-red-400 focus:outline-red-400' : '' %>" placeholder="Your email address" required style="transition: outline 0.7s ease-in-out" value="<%= oldInput.email %>">
              <% if (errorMessage) { %>
                <p class="text-sm text-red-600"><%= errorMessage %></p>
              <% } %>
              <% if (emailErrMsg) { %> 
                <p class="text-sm text-red-400"><%= emailErrMsg %></p>
               <% } %> 
            </div>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <button class="border border-[#0052FF] rounded-full w-full h-14 bg-[#0052FF] text-white text-lg font-semibold hover:shadow-2xl hover:-translate-y-[0.1rem]" id="resetButton" onclick="handleReset()">Reset account password</button>
          </form>
        </div>
      </div>
    </div>
    </main>
<%- include('../includes/end.ejs') %>
