<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/books' ? 'active' : '' %>" href="/books"
          >All Books</a
        >
      </li>

      <% if (isAuthenticated) { %>
      <li class="main-header__item">
        <a
          class="<%= path === '/user/favorite' ? 'active' : '' %>"
          href="/user/favorite"
          >Favorite</a
        >
      </li>

      <li class="main-header__item">
        <a
          class="<%= path === '/user/add-book' ? 'active' : '' %>"
          href="/user/add-book"
          >Add Book
        </a>
      </li>
      <li class="main-header__item">
        <a
          class="<%= path === '/user/my-books' ? 'active' : '' %>"
          href="/user/my-books"
          >My Books
        </a>
      </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
          >Signup</a
        >
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>

<nav class="mobile-nav">
  <ul class="mobile-nav__item-list">
    <li class="mobile-nav__item">
      <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/books' ? 'active' : '' %>" href="/books"
        >All Books</a
      >
    </li>

    <% if (isAuthenticated) { %>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/user/favorite' ? 'active' : '' %>"
        href="/user/favorite"
        >Favorite</a
      >
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/user/add-book' ? 'active' : '' %>"
        href="/user/add-book"
        >Add Book
      </a>
    </li>
    <li class="mobile-nav__item">
      <a
        class="<%= path === '/user/my-books' ? 'active' : '' %>"
        href="/user/my-books"
        >My Books
      </a>
    </li>
    <% } %> <% if (!isAuthenticated) { %>
    <li class="mobile-nav__item">
      <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
        >Login</a
      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
        >Signup</a
      >
    </li>
    <% } else { %>
    <li class="mobile-nav__item">
      <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit">Logout</button>
      </form>
    </li>
    <% } %>

    <li class="mobile-nav__item"></li>
  </ul>
</nav>
